# Server Configuration
PORT=5000

# Database Configuration
# For local MongoDB: mongodb://localhost:27017/student_education_portal
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/student_education_portal
MONGODB_URI=mongodb://localhost:27017/student_education_portal

# JWT Configuration
# Generate a strong, random secret key for production
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_EXPIRE=7d

# Admin Configuration
ADMIN_EMAIL=admin@educationportal.com
ADMIN_PASSWORD=admin123

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Environment
NODE_ENV=development

# Additional Security Headers
CORS_ORIGIN=http://localhost:3000

# Session Configuration (if needed)
SESSION_SECRET=another_random_secret_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # 100 requests per window

# Logging
LOG_LEVEL=info

# Database Options
DB_CONNECTION_TIMEOUT=30000
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=2